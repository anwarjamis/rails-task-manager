<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
<p>Completed: <%= @task.completed %></p>
<%= link_to "Edit task", edit_path(@task) %>
<br>
<%= link_to "Back to index", tasks_path %>
<br>
<%= link_to "Delete #{@task.title}",
            tasks_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
